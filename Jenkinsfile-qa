pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                git branch: 'main', credentialsId: 'gitnew', url: 'https://github.com/aatmaani/devops.git'
            }
        }
        stage('qa staging') {
            steps {
                sh 'bash qa.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh 'helm upgrade nodejs-qa nodejs -f values-qa.yaml -n qa'
            }
        }
    }
    post {
        always{
            slackSend channel: '#jenkins-status', message: "Pipeline Status- ${currentBuild.currentResult} ${env.JOB_NAME} ${env.BUILD_NUMBER} ${env.BUILD_URL}"
        }
    }
}

